{
    "version": "2.0.0",
    "compounds": [
        {
            "name": "Server+Client",
            "sourceMaps": true,
            "configurations": [
                "Server - NodeJS Local",
                "Client - Chrome"
            ],
            "trace": true
        }
    ],
    "configurations": [
        {
            "name": "Client - Chrome",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceRoot}/*"
            },
            "preLaunchTask": ""
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Server - NodeJS Local",
            "port": 9229,
            "restart": true,
            "preLaunchTask": ""
        }
    ]
}